{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/discnet_app/discnet_app",
        "args": [
            "--node_id", "1",
            "--address", "239.200.1.111",
            "--port", "13337"
        ],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },
    {
      "name": "discnet_app_windows",
      "program": "${workspaceFolder}/build/discnet_app/Debug/discnet_app.exe",
      "cwd": "${fileDirname}",
      "type": "cppvsdbg",
      "request": "launch",
      // "stopAtEntry": true,
      "args": [
            "--node_id", "1",
            "--address", "10.10.10.2",
            "--port", "13337"
      ]
    },
    {
      "name": "discnet_sim_windows",
      "program": "${workspaceFolder}/build/discnet_sim/Debug/discnet_sim.exe",
      "cwd": "${fileDirname}",
      "type": "cppvsdbg",
      "request": "launch"
    },
    {
        "name": "discnet_attach_windows",
        "type": "cppvsdbg",
        "request": "attach",
        "processId":"${command:pickProcess}"
    }
    ]
}